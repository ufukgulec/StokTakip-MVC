@model MvcStok.Models.EntityFramework.kategori

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-12">
    <h2>Kategori İşlemleri</h2>
</div>

<div class="col-12">
    @using (Html.BeginForm("Ekle", "Kategori", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Ad)
            @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
        </div>
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn col-12 btn-success">KAYDET</button>
        <hr />
        <a href="/Kategori/Index" class="btn col-12 btn-danger">GERİ</a>
    }
</div>
