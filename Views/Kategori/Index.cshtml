@using MvcStok.Models.EntityFramework
@model List<kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>KATEGORİLER</h2>

<div class="container">
    <div class="col-lg-12">
        <a href="/Kategori/Ekle" class="btn btn-success mb-4">KATEGORİ EKLE</a>
    </div>
    <div class="row table-responsive col-md-12 col-md-offset-2 custyle">
        <table class="table table-bordered dataTable">
            <thead>

                <tr>
                    <th>ID</th>
                    <th>AD</th>
                    <th>ADET</th>
                    @if (User.IsInRole("admin") || User.IsInRole("süperadmin"))
                    {
                        <th>GÜNCELLE</th>
                        <th>SİL</th>
                    }

                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Ad</td>
                    <td>@item.urun.Count</td>
                    @if (User.IsInRole("admin") || User.IsInRole("süperadmin"))
                    {
                        <td><a href="/Kategori/Guncelle/@item.Id" class="btn btn-block btn-success">Güncelle</a></td>
                        <td><a href="/Kategori/Sil/@item.Id" class="btn btn-block btn-danger">Sil</a></td>
                    }

                </tr>
            }
        </table>
        <div class="alert alert-danger col-12 text-center" role="alert">
            Kategori sayısı:
            @Model.Count
        </div>
    </div>

</div>


