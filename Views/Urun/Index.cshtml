@using MvcStok.Models.EntityFramework
@model List<urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ÜRÜNLER</h2>


<div class="container">
    <div class="col-lg-12">
        <a href="/Urun/Ekle" class="btn btn-success mb-4">ÜRÜN EKLE</a>
    </div>
    <div class="row table-responsive col-md-12 col-md-offset-2 custyle">
        <table class="table table-bordered dataTable">
            <thead>

                <tr>
                    <th></th>
                    <th>ID</th>
                    <th>AD</th>
                    <th>FİYAT</th>
                    <th>ADET</th>
                    <th>KATEGORİ</th>
                    <th>SATIŞ DURUMU</th>
                    @if (User.IsInRole("admin") || User.IsInRole("süperadmin"))
                    {
                        <th>GÜNCELLE</th>
                        <th>SİL</th>
                    }

                </tr>
            </thead>
            @{int i = 1; }
            @foreach (var item in Model)
            {

                <tr>
                    <td>@i.</td>
                    <td>@item.Id</td>
                    <td>@item.Ad</td>
                    <td>@item.Fiyat</td>
                    <td>@item.Adet</td>
                    <td>@item.kategori.Ad</td>
                    <td>@item.SatistaMi</td>
                    @if (User.IsInRole("admin") || User.IsInRole("süperadmin"))
                    {
                        <td><a href="/Urun/Guncelle/@item.Id" class="btn btn-block btn-success">Güncelle</a></td>
                        <td><a href="/Urun/Sil/@item.Id" class="btn btn-block btn-danger">Sil</a></td>
                    }


                </tr>
                i++;
            }
        </table>
        <div class="alert alert-danger col-12 text-center" role="alert">
            Toplam Ürün sayısı:
            @Model.Count
        </div>
    </div>

</div>